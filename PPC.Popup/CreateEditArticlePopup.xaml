<UserControl x:Class="PPC.Popup.CreateEditArticlePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPC.Popup"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:CreateEditArticlePopupViewModelDesignData, IsDesignTimeCreatable=True}"
             d:DesignHeight="300" d:DesignWidth="400"
             Width="400"
             MaxHeight="300">
    <UserControl.Resources>
        <Style TargetType="{x:Type Image}" x:Key="AutoDisableImageStyle">
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="Black" 
            BorderThickness="1" 
            Background="{x:Static SystemColors.ControlLightBrush}">
        <Grid FocusManager.FocusedElement="{Binding ElementName=NameTextBox}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" MinWidth="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Ean -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="EAN:"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5,2"
                         MaxLength="13"
                         Text="{Binding Ean}"/>
            
                <!-- Name -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Name:"/>
                <TextBox x:Name="NameTextBox"
                         Grid.Row="1"
                         Grid.Column="1"
                         Margin="5,2"
                         Text="{Binding Description}"/>

                <!-- Category -->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Category:"/>
                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="5,2"
                          IsEditable="True"
                          IsTextSearchEnabled="True" 
                          IsTextSearchCaseSensitive="False"
                          ItemsSource="{Binding Categories}"
                          Text="{Binding Category}"/>

                <!-- Producer -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Producer/seller:"/>
                <ComboBox Grid.Row="3"
                          Grid.Column="1"
                          Margin="5,2"
                          IsEditable="True"
                          IsTextSearchEnabled="True" 
                          IsTextSearchCaseSensitive="False"
                          ItemsSource="{Binding Producers}"
                          Text="{Binding Producer}"/>

                <!-- Supplier price -->
                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Supplier price:"/>
                <xctk:DecimalUpDown Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="5,2"
                                    Minimum="0"
                                    Increment="0.01"
                                    FormatString="C"
                                    ValueChanged="UpDownBase_OnValueChanged"
                                    Value="{Binding SupplierPrice}"/>

                <!-- Vat rate -->
                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Vat:"/>
                <ComboBox Grid.Row="5"
                          Grid.Column="1"
                          Margin="5,2"
                          ItemsSource="{Binding VatRateList}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"
                          SelectedValue="{Binding VatRate}"/>

                <!-- Price -->
                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Price:"/>
                <xctk:DecimalUpDown Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="5,2"
                                    Minimum="0"
                                    Increment="0.01"
                                    FormatString="C"
                                    ValueChanged="UpDownBase_OnValueChanged"
                                    Value="{Binding Price}"/>

                <!-- Stock price -->
                <TextBlock Grid.Row="7"
                           Grid.Column="0"
                           Margin="5,2"
                           Text="Stock:"/>
                <xctk:IntegerUpDown Grid.Row="7"
                                    Grid.Column="1"
                                    Margin="5,2"
                                    Minimum="0"
                                    Increment="1"
                                    Value="{Binding Stock}"/>
            </Grid>
            <Button Grid.Row="1"
                    Width="32"
                    Margin="5,2"
                    Command="{Binding SaveArticleCommand}">
                <Image Style="{StaticResource AutoDisableImageStyle}"
                       Source="Images/checkmark-round.png"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
